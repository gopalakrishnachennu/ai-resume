{
  "manifest_version": 3,
  "name": "JobFiller Pro - Auto Job Application Filler",
  "version": "2.0.0",
  "description": "Automatically fill job applications with one click across LinkedIn, Indeed, Glassdoor, Workday, Greenhouse, Lever, and 100+ job portals",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.indeed.com/*",
    "https://indeed.com/*",
    "https://www.glassdoor.com/*",
    "https://glassdoor.com/*",
    "https://*.myworkdayjobs.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.smartrecruiters.com/*",
    "https://*.icims.com/*",
    "https://*.taleo.net/*",
    "https://*.brassring.com/*",
    "https://*.jobvite.com/*",
    "https://*.ultipro.com/*",
    "https://*.successfactors.com/*",
    "https://*.ashbyhq.com/*",
    "https://*.bamboohr.com/*",
    "https://*.workable.com/*",
    "https://*.recruitee.com/*",
    "https://*.phenom.com/*",
    "https://*.avature.net/*",
    "https://*.jobs.lever.co/*",
    "https://*.wd1.myworkdayjobs.com/*",
    "https://*.wd5.myworkdayjobs.com/*",
    "https://boards.greenhouse.io/*",
    "https://angel.co/*",
    "https://wellfound.com/*",
    "https://www.ziprecruiter.com/*",
    "https://www.monster.com/*",
    "https://www.careerbuilder.com/*",
    "https://www.dice.com/*",
    "https://www.simplyhired.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/storage-manager.js",
        "lib/firebase-session.js",
        "lib/answer-templates.js",
        "lib/field-resolver.js",
        "lib/response-validator.js",
        "lib/response-cache.js",
        "lib/groq-client.js",
        "lib/qa-capture.js",
        "content-scripts/utils.js",
        "content-scripts/platform-detector.js",
        "content-scripts/field-patterns.js",
        "content-scripts/form-detector.js",
        "content-scripts/form-filler.js",
        "content-scripts/ai-form-filler.js",
        "content-scripts/page-analyzer.js",
        "content-scripts/jd-matcher.js",
        "content-scripts/answer-assistant.js",
        "content-scripts/validation-engine.js",
        "content-scripts/ats-handlers.js",
        "content-scripts/step-tracker.js",
        "content-scripts/smart-monitor.js",
        "content-scripts/prediction-engine.js",
        "content-scripts/work-auth-guard.js",
        "content-scripts/ai-answer-engine.js",
        "content-scripts/notification-banner.js",
        "content-scripts/fill-tracker.js",
        "content-scripts/fab-helpers.js",
        "content-scripts/floating-button.js",
        "content-scripts/main.js"
      ],
      "css": [
        "content-scripts/notification-banner.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "https://*.vercel.app/*",
      "http://localhost:3000/*"
    ]
  }
}