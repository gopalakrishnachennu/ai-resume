{
    "manifest_version": 3,
    "name": "JobFiller Pro",
    "version": "2.0.0",
    "description": "Auto-fill job applications instantly with AI",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "alarms"
    ],
    "host_permissions": [
        "https://*/*",
        "http://localhost:*/*"
    ],
    "background": {
        "service_worker": "src/background/service-worker.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "src/ui/popup/popup.html",
        "default_icon": {
            "16": "public/icons/icon16.png",
            "48": "public/icons/icon48.png",
            "128": "public/icons/icon128.png"
        }
    },
    "icons": {
        "16": "public/icons/icon16.png",
        "48": "public/icons/icon48.png",
        "128": "public/icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "public/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}